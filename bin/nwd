#!/usr/bin/env node

const path = require('path');
const child_process = require('child_process');

const params = ['--harmony-destructuring', '--harmony-rest-parameters'];
params.push(path.join(path.dirname(module.filename), 'nwd.js'));
Array.prototype.push.apply(params, process.argv.slice(2));

//console.log('params:', params);

const cp = child_process.spawn('node', params, {
    stdio: 'inherit'
});

if(!cp) {
    console.error('ERROR_SPAWN_FAILED');
    process.exit(-1);
}

cp.on('close', function() {
    console.log();
    console.log('Farewell!');
});
